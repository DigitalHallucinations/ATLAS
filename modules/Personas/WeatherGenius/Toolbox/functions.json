[
    {
        "name": "get_current_weather",
        "version": "1.0.0",
        "side_effects": "none",
        "default_timeout": 30,
        "auth": {
            "required": true,
            "type": "api_key",
            "env": "OPENWEATHERMAP_API_KEY"
        },
        "allow_parallel": true,
        "description": "Get current and forecast weather data for a location",
        "parameters": {
            "type": "object",
            "properties": {
                "lat": {
                    "type": "number",
                    "description": "Latitude"
                },
                "lon": {
                    "type": "number",
                    "description": "Longitude"
                },
                "exclude": {
                    "type": "string",
                    "description": "Exclude certain parts of the weather data from the API response. It should be a comma-delimited list (without spaces). Available values: current, minutely, hourly, daily, alerts."
                },
                "units": {
                    "type": "string",
                    "enum": [
                        "standard",
                        "metric",
                        "imperial"
                    ],
                    "default": "imperial",
                    "description": "Units of measurement"
                }
            },
            "required": [
                "lat",
                "lon",
                "units"
            ]
        },
        "idempotency_key": false
    },
    {
        "name": "get_historical_weather",
