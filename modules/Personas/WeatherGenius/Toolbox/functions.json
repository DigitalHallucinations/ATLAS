                },
                "lon": {
                    "type": "number",
                    "description": "Longitude"
                },
                "dt": {
                    "type": "number",
                    "description": "Timestamp (Unix time, UTC time zone)"
                },
                "units": {
                    "type": "string",
                    "enum": [
                        "standard",
                        "metric",
                        "imperial"
                    ],
                    "default": "imperial",
                    "description": "Units of measurement"
                },
                "lang": {
                    "type": "string",
