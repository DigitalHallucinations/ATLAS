{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "ATLAS Persona Definition",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "persona"
    ],
    "properties": {
        "persona": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/$defs/personaEntry"
            }
        }
    },
    "$defs": {
        "personaEntry": {
            "type": "object",
            "additionalProperties": true,
            "required": [
                "name",
                "content"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "minLength": 1
                },
                "meaning": {
                    "type": "string"
                },
                "content": {
                    "type": "object",
                    "additionalProperties": true,
                    "required": [
                        "start_locked",
                        "editable_content",
                        "end_locked"
                    ],
                    "properties": {
                        "start_locked": {
                            "type": "string"
                        },
                        "editable_content": {
                            "type": "string"
                        },
                        "end_locked": {
                            "type": "string"
                        }
                    }
                },
                "type": {
                    "type": "object",
                    "additionalProperties": true,
                    "properties": {
                        "personal_assistant": {
                            "type": "object",
                            "additionalProperties": true,
                            "properties": {
                                "access_to_calendar": {
                                    "description": "Enables read access to the configured calendar tool.",
                                    "anyOf": [
                                        {"type": "boolean"},
                                        {"type": "string", "enum": ["True", "False", "true", "false", ""]}
                                    ]
                                },
                                "calendar_write_enabled": {
                                    "description": "Allows the persona to create, update, or delete calendar events when calendar access is enabled.",
                                    "anyOf": [
                                        {"type": "boolean"},
                                        {"type": "string", "enum": ["True", "False", "true", "false", ""]}
                                    ]
                                },
                                "terminal_read_enabled": {
                                    "description": "Permit the persona to execute read-only terminal commands inside the sandbox.",
                                    "anyOf": [
                                        {"type": "boolean"},
                                        {"type": "string", "enum": ["True", "False", "true", "false", ""]}
                                    ]
                                },
                                "terminal_write_enabled": {
                                    "description": "Allow the persona to run terminal commands that can modify the filesystem or environment.",
                                    "anyOf": [
                                        {"type": "boolean"},
                                        {"type": "string", "enum": ["True", "False", "true", "false", ""]}
                                    ]
                                }
                            }
                        }
                    }
                },
                "allowed_tools": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/allowedTool"
                    },
                    "uniqueItems": true
                },
                "allowed_skills": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/allowedSkill"
                    },
                    "uniqueItems": true
                },
                "collaboration": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "enabled": {
                            "description": "Enable collaborative response generation for this persona.",
                            "anyOf": [
                                {"type": "boolean"},
                                {"type": "string"}
                            ]
                        },
                        "protocol": {
                            "type": "string",
                            "enum": ["vote", "critique", "contract_net"],
                            "default": "vote"
                        },
                        "quorum": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1,
                            "default": 0.5
                        },
                        "timeout": {
                            "type": "number",
                            "minimum": 0,
                            "default": 10
                        },
                        "participants": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/collaborationParticipant"
                            }
                        }
                    }
                }
            }
        },
        "allowedTool": {
            "type": "string",
            "enum": []
        },
        "allowedSkill": {
            "type": "string",
            "enum": []
        },
        "collaborationParticipant": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id"],
            "properties": {
                "id": {
                    "type": "string",
                    "minLength": 1
                },
                "provider": {
                    "type": "string"
                },
                "model": {
                    "type": "string"
                },
                "system_prompt": {
                    "type": "string"
                },
                "weight": {
                    "type": "number"
                },
                "metadata": {
                    "type": "object"
                }
            }
        }
    }
}
