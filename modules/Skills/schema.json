{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Skill Manifest",
  "type": "array",
  "items": {
    "$ref": "#/definitions/skill"
  },
  "definitions": {
    "skill": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "version",
        "instruction_prompt",
        "required_tools",
        "required_capabilities",
        "safety_notes"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "instruction_prompt": {
          "type": "string",
          "minLength": 1
        },
        "required_tools": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "default": []
        },
        "required_capabilities": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "default": []
        },
        "safety_notes": {
          "type": "string",
          "minLength": 1
        },
        "summary": {
          "type": "string",
          "minLength": 1
        },
        "category": {
          "type": "string",
          "minLength": 1
        },
        "capability_tags": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "default": []
        }
      }
    }
  }
}
