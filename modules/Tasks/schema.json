{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Task Manifest",
  "type": "array",
  "items": {
    "$ref": "#/definitions/task"
  },
  "definitions": {
    "task": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "summary",
        "required_skills",
        "required_tools",
        "acceptance_criteria",
        "escalation_policy"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "summary": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "persona": {
          "type": "string"
        },
        "extends": {
          "type": "string",
          "minLength": 1
        },
        "required_skills": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "default": []
        },
        "required_tools": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "default": []
        },
        "acceptance_criteria": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1
        },
        "escalation_policy": {
          "type": "object",
          "additionalProperties": false,
          "required": ["level", "contact"],
          "properties": {
            "level": {
              "type": "string",
              "minLength": 1
            },
            "contact": {
              "type": "string",
              "minLength": 1
            },
            "timeframe": {
              "type": "string"
            },
            "triggers": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              },
              "default": []
            },
            "actions": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              },
              "default": []
            },
            "notes": {
              "type": "string"
            },
            "auto_escalate": {
              "anyOf": [
                {"type": "boolean"},
                {"type": "string"}
              ]
            }
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "default": []
        },
        "priority": {
          "type": "string"
        }
      }
    }
  }
}
